datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())

    fullName String
    email    String @unique
    password String

    createdAt DateTime @default(now())
    upadtedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    name       String
    imageUrl   String
    /* category   Category @relation(fields: [categoryId], references: [id])
    categoryId Int */

    createdAt DateTime @default(now())
    upadtedAt DateTime @updatedAt
}

